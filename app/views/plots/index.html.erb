

<p id="notice"><%= notice %></p>

<h1>Listing Plots</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Architect</th>
      <th>Type</th>
      <th>Address</th>
      <th>Latitude</th>
      <th>Longitude</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @plots.each do |plot| %>
      <tr>
        <td><%= plot.title %></td>
        <td><%= plot.architect.name %></td>
        <td><%= plot.typ %></td>
        <td><%= plot.address %></td>
        <td><%= plot.latitude %></td>
        <td><%= plot.longitude %></td>
        <td><%= link_to 'Show', plot %></td>
        <td><%= link_to 'Edit', edit_plot_path(plot) %></td>
        <td><%= link_to 'Destroy', plot, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Plot', new_plot_path %> <br>
<%= link_to 'Architects List', architects_path %>

