<%= render 'partials/menu' %>

<div class='header'>
  <img alt="Open" class="icon-menu" src="https://s3.amazonaws.com/codecademy-content/projects/z2d/stories/menu-black.svg" width="24px">
  <div class="container">
    <h1>Archimapper</h1>
  </div>
</div>


<div class='container'>
	<h2>Suggest a building</h2>
	<form>
	  <div class="form-group">
	    <label for="buildingTitle">Building Name</label>
	    <input type="text" class="form-control" id="buildingTitle" placeholder="Title">
	  </div>
	  <div class="form-group">
	    <label for="buildingAddress">Address</label>
	    <input type="text" class="form-control" id="buildingAddress" placeholder="Address">
	  </div>
	  <div class="form-group">
	    <label for="buildingDescription">Description</label>
	    <textarea class="form-control" rows="3" placeholder="If you can tell us anything about the building we'd love to hear it."></textarea>
	  </div>
	  <div class="form-group">
	    <label for="buidingImage">Building Picture</label>
	    <input type="file" id="buidingImage">
	  </div>
	  <div class="checkbox">
	    <label>
	      <input type="checkbox"> I confirm I own this image and allow it to be used on Archimapper
	    </label>
	  </div>
	  <button type="submit" class="btn btn-default">Submit</button>
	</form>
</div